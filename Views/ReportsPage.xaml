<Window x:Class="WorkReportCreator.ReportsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkReportCreator"
        mc:Ignorable="d"
        Title="Report" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <TabControl x:Name="Tabs">
        <TabItem Header="Быстрые действия">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Сохранить все отчеты" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                <Button Content="Вернуться назад" Click="ShowWorkAndStudentInformation" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
            </StackPanel>
        </TabItem>
        
        <TabItem>
            <local:ReportView/>
        </TabItem>
        
    </TabControl>
</Window>
