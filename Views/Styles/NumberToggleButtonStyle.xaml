<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="NumberToggleButton" TargetType="ToggleButton">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Margin" Value="2 0 2 0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">

                    <Grid>
                        <Ellipse x:Name="ellipse" Width="40" Height="40" Fill="#FF121212" StrokeThickness="2" Stroke="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Label x:Name="label" Content="{TemplateBinding Content}" Foreground="#FFA8B3B3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">

                                <!--Вид нажатой кнопки-->
                                <VisualState x:Name="Checked">
                                    <Storyboard>
                                        <ColorAnimation To="LightGreen" Duration="0:0:0.2" Storyboard.TargetName="ellipse" Storyboard.TargetProperty="Stroke.(SolidColorBrush.Color)"/>
                                        <ColorAnimation To="White" Duration="0:0:0.2" Storyboard.TargetName="label" Storyboard.TargetProperty="Foreground.(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>

                                <!--Вид не нажатой кнопки-->
                                <VisualState x:Name="Unchecked">
                                    <Storyboard>
                                        <ColorAnimation To="Transparent" Duration="0:0:0.2" Storyboard.TargetName="ellipse" Storyboard.TargetProperty="Stroke.(SolidColorBrush.Color)"/>
                                        <ColorAnimation To="#FFA8B3B3" Duration="0:0:0.2" Storyboard.TargetName="label" Storyboard.TargetProperty="Foreground.(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </VisualState>

                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>