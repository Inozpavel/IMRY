<UserControl x:Class="WorkReportCreator.Views.CustomConrols.DynamicTaskItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkReportCreator.Views.CustomConrols"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800" MouseDown="InvertIsChecked" Height="40">
    <Grid Background="Transparent" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Height="30" Width="30" BorderBrush="White" BorderThickness="2" CornerRadius="5" Margin="10 2 0 2">
            <Image VerticalAlignment="Center" HorizontalAlignment="Center" Source="{Binding ImagePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>
        <TextBlock Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10 0 0 0"/>
    </Grid>
</UserControl>
