<UserControl x:Class="WorkReportCreator.ReportItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkReportCreator"
             xmlns:item="clr-namespace:WorkReportCreator.Views"
             mc:Ignorable="d" 
              d:DesignWidth="800" Height="auto">
    <Grid Background="#FF191A1B" Height="auto" VerticalAlignment="Stretch">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!--Рамка с информацией о файлах-->
        <Border>
            <StackPanel>
                <Grid>
                    <TextBlock Text="{Binding DynamicTasksStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="White" HorizontalAlignment="Center" FontSize="16" Margin="0 3 0 3"/>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        
                        <StackPanel.Resources>
                            <ResourceDictionary Source="/Views/Styles/OneSymbolButtonStyle.xaml"/>
                        </StackPanel.Resources>
                        
                        <Button Content="🗕" Command="{Binding HideDynamicTasks}" Style="{StaticResource OneSymbolButton}"/>
                        <Button Content="🗖" Command="{Binding ShowDynamicTasks}" Style="{StaticResource OneSymbolButton}"/>
                    </StackPanel>
                </Grid>
                
                <!--Выбор варианта задания-->
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="167" HorizontalScrollBarVisibility="Auto" Visibility="{Binding DynamicTasksVisiblity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ItemsControl Name="listBoxTasks" Background="#FF333337" BorderThickness="0" ItemsSource="{Binding DynamicTasksArray, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding DynamicTasksVisiblity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </ScrollViewer>

                <Grid Background="#FF252526">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding HintVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="30"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </StackPanel.Resources>

                        <TextBlock Text="Добавьте первый элемент сами"/>
                        <TextBlock Text="или перетащите в эту область"/>
                        <TextBlock Text="файлы или папки"/>

                    </StackPanel>
                    <ListBox AllowDrop="True" BorderThickness="5" BorderBrush="Transparent" x:Name="listBox" Height="317" Background="Transparent" SelectedIndex="{Binding SelectedItemIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding FilesArray, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" Grid.Row="0" Drop="AddAllFiles">
                    
                        <ListBox.Style>
                            <Style TargetType="ListBox">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="DragEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation To="Yellow" Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                
                                    <EventTrigger RoutedEvent="DragLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation To="Transparent" Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                
                                    <EventTrigger RoutedEvent="Drop">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation To="Transparent" Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                
                                </Style.Triggers>
                            </Style>
                        </ListBox.Style>

                    </ListBox>
                    
                    
                </Grid>
                <DockPanel Grid.Row="1" Background="Transparent">
                    <!--Кнопки с управлением для файлов-->
                    <DockPanel.Resources>
                        <ResourceDictionary Source="/Views/Styles/OneSymbolButtonStyle.xaml"/>
                    </DockPanel.Resources>
                    
                    <Button Content="+" Command="{Binding AddFileInfo}" Style="{StaticResource OneSymbolButton}" Margin="5 2 5 2"/>
                    <Button Content="-" Command="{Binding RemoveFileInfo}" Style="{StaticResource OneSymbolButton}" Margin="5 2 5 2"/>
                    <Button Content="⮝" Command="{Binding SwapUpFileInfo}" Style="{StaticResource OneSymbolButton}" Margin="5 2 5 2"/>
                    <Button Content="⮟" Command="{Binding SwapDownFileInfo}" Style="{StaticResource OneSymbolButton}" HorizontalAlignment="Left" Margin="5 2 5 2"/>
                </DockPanel>
            </StackPanel>
        </Border>
        
        <!--Кнопки с сохранием данных-->
        <Border Background="#FF121212" Grid.Row="1">
            <Grid Margin="5" >
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                
                    <StackPanel.Resources>
                        <ResourceDictionary Source="/Views/Styles/CommonAnimatedButtonStyle.xaml"/>
                    </StackPanel.Resources>

                    <Button IsEnabled="False" Content="Сохранить данные" Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource CommonAnimatedButton}"/>
                    <Button Content="Сгенерировать отчет" Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource CommonAnimatedButton}" Click="GenerateReport"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
