<UserControl x:Class="WorkReportCreator.ReportItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkReportCreator"
             xmlns:item="clr-namespace:WorkReportCreator.Views"
             mc:Ignorable="d" 
              d:DesignWidth="800" Height="auto">
    <Grid Background="#FF181818" Height="auto" VerticalAlignment="Stretch">
        
        <Grid.Resources>
            <Style TargetType="Button" x:Key="OneSymbolButton">
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Width" Value="30"/>
                <Setter Property="Focusable" Value="False"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="10" BorderThickness="2" BorderBrush="White" Opacity="0">
                                <TextBlock x:Name="textBox" Text="{TemplateBinding Content}" VerticalAlignment="Center" Foreground="White" TextAlignment="Center"/>

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">

                                        <!--Работающая кнопка-->
                                        <VisualState x:Name="Normal">
                                            <Storyboard>
                                                <DoubleAnimation Duration="0:0:0.3" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="border"/>
                                            </Storyboard>
                                        </VisualState>

                                        <!--Выключенная кнопка-->
                                        <VisualState x:Name="Disabled">
                                            <Storyboard>
                                                <DoubleAnimation Duration="0:0:0.3" To="0" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="border"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!--Рамка с информацией о файлах-->
        <Border>
            <StackPanel>
                <Grid>
                    <TextBlock Text="{Binding DynamicTasksStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="White" HorizontalAlignment="Center" FontSize="16" Margin="0 3 0 3"/>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Width" Value="100"/>
                            </Style>
                        </StackPanel.Resources>
                        <Button Content="🗕" Command="{Binding HideDynamicTasks}" Style="{StaticResource OneSymbolButton}"/>
                        <Button Content="🗖" Command="{Binding ShowDynamicTasks}" Style="{StaticResource OneSymbolButton}"/>
                    </StackPanel>
                </Grid>
                
                <!--Выбор варианта задания-->
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="167" HorizontalScrollBarVisibility="Auto" Visibility="{Binding DynamicTasksVisiblity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ItemsControl Name="listBoxTasks" Background="#FF333337" BorderThickness="0" ItemsSource="{Binding DynamicTasksArray, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding DynamicTasksVisiblity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </ScrollViewer>
                
                <Grid Background="#FF1E1E1E">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding HintVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="30"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </StackPanel.Resources>

                        <TextBlock Text="Добавьте первый элемент сами"/>
                        <TextBlock Text="или перетащите в эту область"/>
                        <TextBlock Text="файлы или папки"/>

                    </StackPanel>
                    <ListBox AllowDrop="True" BorderThickness="5" BorderBrush="Transparent" x:Name="listBox" Height="317" Background="Transparent" SelectedIndex="{Binding SelectedItemIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding FilesArray, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" Grid.Row="0" Drop="AddAllFiles">
                    
                        <ListBox.Style>
                            <Style TargetType="ListBox">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="DragEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation To="Yellow" Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                
                                    <EventTrigger RoutedEvent="DragLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation To="Transparent" Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                
                                    <EventTrigger RoutedEvent="Drop">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation To="Transparent" Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                
                                </Style.Triggers>
                            </Style>
                        </ListBox.Style>

                    </ListBox>
                    
                    
                </Grid>
                <DockPanel Grid.Row="1" Background="Transparent">
                    <!--Кнопки с управлением для файлов-->
                    <DockPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="DockPanel.Dock" Value="Left"/>
                            <Setter Property="Margin" Value="2 2 2 2"/>
                            <Setter Property="Padding" Value="2"/>
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                                                                     
                    </DockPanel.Resources>

                    <Button Content="＋" Command="{Binding AddFileInfo}" Style="{StaticResource OneSymbolButton}"/>
                    <Button Content="－" Command="{Binding RemoveFileInfo}" Style="{StaticResource OneSymbolButton}"/>
                    <Button Content="⮝" Command="{Binding SwapUpFileInfo}" Style="{StaticResource OneSymbolButton}"/>
                    <Button Content="⮟" Command="{Binding SwapDownFileInfo}" Style="{StaticResource OneSymbolButton}"/>
                </DockPanel>
            </StackPanel>
        </Border>
        
        <!--Кнопки с сохранием данных-->
        <Border Background="#FF121212" Grid.Row="1">
            <Grid Margin="5" >
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                
                    <StackPanel.Resources>
                        <ResourceDictionary Source="/Views/Styles/CommonAnimatedButtonStyle.xaml"/>
                    </StackPanel.Resources>
                
                    <Button Content="Сохранить данные" Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource CommonAnimatedButton}"/>
                    <Button Content="Сгенерировать отчет" Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource CommonAnimatedButton}" Click="GenerateReport"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
